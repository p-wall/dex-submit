{
  "manifest_version": 2,
  "name": "dex-submit",
  "version": "0.1.5",
  "description": "Auto-submit Dex login device code flow",
  "applications": {
    "gecko": {
      "id": "dex-submit@p-wall.github.io",
      "update_url": "https://raw.githubusercontent.com/p-wall/dex-submit/main/updates.json"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ]
}
